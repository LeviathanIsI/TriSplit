<Window x:Class="TriSplit.Desktop.Views.Dialogs.ProfileSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Data Profile"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinWidth="450">
    <Border Padding="16" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Multiple saved profiles match these headers. Choose one to continue."
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"
                       FontWeight="SemiBold" />

            <ListBox x:Name="MatchesList"
                     Grid.Row="1"
                     Width="400"
                     HorizontalAlignment="Stretch"
                     SelectionMode="Single"
                     DisplayMemberPath="Title">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8"
                                Margin="0,0,0,6"
                                BorderBrush="#FFD0D0D0"
                                BorderThickness="1"
                                CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Details}"
                                           Foreground="Gray"
                                           FontSize="12"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="SelectButton"
                        Content="Use Profile"
                        Width="110"
                        Margin="0,0,8,0"
                        IsDefault="True"
                        Click="OnSelectClick" />
                <Button Content="Cancel"
                        Width="80"
                        IsCancel="True" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
