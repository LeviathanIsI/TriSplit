<Window x:Class="TriSplit.Desktop.Views.Dialogs.PartialMatchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Header Changes"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinWidth="450">
    <Border Padding="16" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="IntroText"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"
                       FontWeight="SemiBold" />

            <StackPanel Grid.Row="1" Margin="0,0,0,8">
                <TextBlock Text="Headers that disappeared from this file:" FontWeight="SemiBold" />
                <ItemsControl x:Name="MissingItems" ItemsSource="{Binding MissingHeaders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="- {Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoMissingText" Text="(none)" Foreground="Gray" />
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,8">
                <TextBlock Text="New headers found in this file:" FontWeight="SemiBold" />
                <ItemsControl x:Name="AdditionalItems" ItemsSource="{Binding AdditionalHeaders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="- {Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoAdditionalText" Text="(none)" Foreground="Gray" />
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Update Profile"
                        Width="120"
                        Margin="0,12,8,0"
                        IsDefault="True"
                        Click="OnUpdateClick" />
                <Button Content="Create New"
                        Width="110"
                        Margin="0,12,8,0"
                        Click="OnCreateNewClick" />
                <Button Content="Cancel"
                        Width="80"
                        Margin="0,12,0,0"
                        IsCancel="True" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
