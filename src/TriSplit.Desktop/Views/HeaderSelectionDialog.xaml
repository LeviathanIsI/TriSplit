<Window x:Class="TriSplit.Desktop.Views.HeaderSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TriSplit.Desktop.ViewModels"
        Title="{Binding Title}" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:HeaderSelectionViewModel}">

  <Window.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
  </Window.Resources>

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <TextBlock Grid.Row="0"
               Text="{Binding Title}"
               Style="{StaticResource HeaderTextBlock}"
               Margin="0,0,0,16"/>

    <!-- Selection Summary and Controls -->
    <Border Grid.Row="1"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="12"
            Margin="0,0,0,16">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal">
          <TextBlock Text="{Binding SelectedCount}" 
                     Foreground="{StaticResource AccentBrush}"
                     FontWeight="SemiBold"/>
          <TextBlock Text=" of " 
                     Foreground="{StaticResource SecondaryTextBrush}"/>
          <TextBlock Text="{Binding TotalCount}" 
                     Foreground="{StaticResource AccentBrush}"
                     FontWeight="SemiBold"/>
          <TextBlock Text=" headers selected"
                     Foreground="{StaticResource SecondaryTextBrush}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
          <Button Content="Select All"
                  Click="SelectAll_Click"
                  Style="{StaticResource SecondaryButton}"
                  Padding="12,6"
                  Margin="0,0,8,0"/>
          <Button Content="Select None"
                  Click="SelectNone_Click" 
                  Style="{StaticResource SecondaryButton}"
                  Padding="12,6"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Headers List -->
    <Border Grid.Row="2"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
      <ScrollViewer Padding="12" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Headers}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <CheckBox Content="{Binding Header}"
                        IsChecked="{Binding IsSelected}"
                        Foreground="{StaticResource TextBrush}"
                        Margin="0,4"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>

    <!-- Buttons -->
    <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,16,0,0">
      <Button Content="Add Selected Mappings"
              Click="AddMappings_Click"
              Style="{StaticResource PrimaryButton}"
              Padding="16,8"
              Margin="0,0,8,0"/>
      <Button Content="Update Metadata Only"
              Click="UpdateMetadata_Click"
              Style="{StaticResource SecondaryButton}"
              Padding="16,8"
              Margin="0,0,8,0"/>
      <Button Content="Cancel"
              Click="Cancel_Click"
              Style="{StaticResource SecondaryButton}"
              Padding="16,8"/>
    </StackPanel>
  </Grid>
</Window>
