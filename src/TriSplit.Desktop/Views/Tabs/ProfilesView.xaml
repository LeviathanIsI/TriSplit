<UserControl x:Class="TriSplit.Desktop.Views.Tabs.ProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             AllowDrop="True"
             PreviewDragOver="ProfilesView_OnPreviewDragOver"
             Drop="ProfilesView_OnDrop"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1400"
             Background="{StaticResource BackgroundBrush}">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
  </UserControl.Resources>

  <Grid Margin="20">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="340"/>
      <ColumnDefinition Width="20"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="16"
            Margin="0,0,0,16">
      <Grid>
        <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="*"/>

                                  <ColumnDefinition Width="Auto"/>

                                  <ColumnDefinition Width="Auto"/>

                                </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
          <!-- App title moved to footer -->
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
          <TextBlock Text="Profile Name"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,8,0"/>
          <TextBox Text="{Binding ProfileName}"
                   Width="260"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
          <Button Content="Save"
                  Command="{Binding SaveProfileCommand}"
                  Style="{StaticResource PrimaryButton}"
                  Padding="14,6"
                  Margin="0,0,12,0"/>
          <Button Content="Save As"
                  Command="{Binding SaveProfileAsCommand}"
                  Style="{StaticResource SecondaryButton}"
                  Padding="14,6"
                  Margin="0,0,12,0"/>
          <Button Content="Load"
                  Command="{Binding LoadProfileCommand}"
                  Style="{StaticResource SecondaryButton}"
                  Padding="14,6"
                  Margin="0,0,16,0"/>
          <CheckBox Content="Create Secondary Contacts File"
                    IsChecked="{Binding CreateSecondaryContactsFile}"
                    Foreground="{StaticResource TextBrush}"/>
        </StackPanel>

        <!-- Header actions -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
          <Button Content="Suggest Headers"
                  Command="{Binding LoadHeaderSuggestionsCommand}"
                  Style="{StaticResource SecondaryButton}"
                  Padding="14,6"
                  Margin="0,0,12,0"/>
          <Button Content="Import CSV Headers"
                  Command="{Binding ImportHeadersCommand}"
                  Style="{StaticResource SecondaryButton}"
                  Padding="14,6"
                  Margin="0,0,12,0"/>
          <Button Content="Export Data Profile"
                  Command="{Binding ExportProfileCommand}"
                  Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

      </Grid>
    </Border>

    <!-- Saved Profiles -->
    <Border Grid.Column="0"
            Grid.Row="1"
           
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
      <Grid Margin="12">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding SavedProfiles}"
                 SelectedItem="{Binding SelectedProfile}"
                 BorderThickness="0"
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
          <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
              <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
              <Setter Property="Padding" Value="0"/>
              <Setter Property="Margin" Value="0,0,0,6"/>
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="ItemBorder"
                            Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,10">
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*"/>
                          <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Name}"
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="Medium"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                        
                        <Border Grid.Column="1"
                                x:Name="SelectedIndicator"
                                Background="{StaticResource AccentBrush}"
                                Width="4"
                                Height="16"
                                CornerRadius="2"
                                Visibility="Collapsed"
                                Margin="8,0,0,0"/>
                      </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                      <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                      </Trigger>
                      <Trigger Property="IsSelected" Value="True">
                        <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                        <Setter TargetName="SelectedIndicator" Property="Visibility" Value="Visible"/>
                      </Trigger>
                    </ControlTemplate.Triggers>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="1" Margin="0,16,0,0">
          <Button Content="+ New Data Profile"
                  Command="{Binding NewProfileCommand}"
                  Style="{StaticResource SecondaryButton}"
                  FontSize="12"
                  Height="36"
                  Margin="0,0,0,8"/>
          <Button Content="Delete Selected Profile"
                  Command="{Binding DeleteProfileCommand}"
                  Style="{StaticResource SecondaryButton}"
                  FontSize="12"
                  Height="36"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Main Panel -->
    <Border Grid.Column="2"
            Grid.Row="1"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="{Binding GroupPanelRowHeight}"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Group Defaults -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16">
          <Expander IsExpanded="{Binding IsGroupDefaultsExpanded, Mode=TwoWay}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ExpandDirection="Down"
                    Padding="0"
                    HorizontalContentAlignment="Stretch">
            <Expander.Header>
              <TextBlock Text="Contacts - Properties - Phones"
                         Foreground="{StaticResource AccentBrush}"
                         FontWeight="SemiBold"
                         FontSize="16"/>
            </Expander.Header>
            <Expander.Content>
              <ScrollViewer VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding GroupCollections}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                      <Setter Property="Margin" Value="0,0,12,12"/>
                    </Style>
                  </ItemsControl.ItemContainerStyle>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Border Background="{StaticResource SurfaceBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              BorderThickness="1"
                              CornerRadius="4"
                              Padding="12">
                        <StackPanel>
                          <Grid>
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                              <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Header}"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="Bold"/>
                            <Button Grid.Column="1"
                                    Content="+ Add Group"
                                    Command="{Binding AddGroupCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="10,4"
                                    Margin="8,0,0,0"/>
                          </Grid>

                          <ItemsControl ItemsSource="{Binding Groups}" Margin="0,8,0,0">
                            <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,8,0,0">
                                  <StackPanel>
                                    <Grid>
                                      <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                      </Grid.ColumnDefinitions>
                                      <TextBlock Grid.Column="0"
                                                 Text="{Binding Title}"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 FontWeight="SemiBold"/>
                                      <Button Grid.Column="1"
                                              Content="Clone"
                                              Command="{Binding DataContext.CloneGroupCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              CommandParameter="{Binding}"
                                              Style="{StaticResource SecondaryButton}"
                                              Padding="8,4"
                                              Margin="8,0,0,0"/>
                                      <Button Grid.Column="2"
                                              Content="Remove"
                                              Command="{Binding DataContext.RemoveGroupCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              CommandParameter="{Binding}"
                                              Style="{StaticResource SecondaryButton}"
                                              Padding="8,4"
                                              Margin="8,0,0,0"/>
                                    </Grid>

                                    <ItemsControl x:Name="AssociationItems"
                                                  ItemsSource="{Binding Associations}"
                                                  Margin="0,8,0,0">
                                      <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                          <Border Background="{StaticResource SurfaceBrush}"
                                                  BorderBrush="{StaticResource BorderBrush}"
                                                  BorderThickness="1"
                                                  CornerRadius="4"
                                                  Padding="10"
                                                  Margin="0,6,0,0">
                                            <Grid>
                                              <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="Auto"/>
                                              </Grid.ColumnDefinitions>
                                              <StackPanel Grid.Column="0">
                                                <TextBlock Text="Associate to"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                                <ComboBox ItemsSource="{Binding TargetOptions}"
                                                          SelectedItem="{Binding SelectedTarget, Mode=TwoWay}"
                                                          DisplayMemberPath="DisplayName"
                                                          Margin="0,4,0,0"
                                                          MinWidth="140"/>
                                              </StackPanel>
                                              <TextBlock Grid.Column="1"
                                                         Text="&#x2192;"
                                                         Margin="12,24,12,0"
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentBrush}"
                                                         FontWeight="Bold"/>
                                              <StackPanel Grid.Column="2">
                                                <TextBlock Text="Labels"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                                <ItemsControl ItemsSource="{Binding LabelOptions}"
                                                              Margin="0,4,0,0">
                                                  <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                      <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                  </ItemsControl.ItemsPanel>
                                                  <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                      <CheckBox Content="{Binding Label}"
                                                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                Margin="0,0,12,4"/>
                                                    </DataTemplate>
                                                  </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                              </StackPanel>
                                              <Button Grid.Column="3"
                                                      Content="Remove"
                                                      Command="{Binding DataContext.RemoveAssociationCommand, Source={x:Reference AssociationItems}}"
                                                      CommandParameter="{Binding}"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="12,0,0,0"
                                                      VerticalAlignment="Top"/>
                                            </Grid>
                                          </Border>
                                        </DataTemplate>
                                      </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button Content="+ Add association"
                                            Command="{Binding AddAssociationCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Padding="10,4"
                                            Margin="0,8,0,0"/>

                                    <StackPanel Margin="0,8,0,0">
                                      <TextBlock Text="Data Source"
                                                 Foreground="{StaticResource SecondaryTextBrush}"/>
                                      <TextBox Text="{Binding DataSource}"
                                               Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,8,0,0">
                                      <TextBlock Text="Data Type"
                                                 Foreground="{StaticResource SecondaryTextBrush}"/>
                                      <TextBox Text="{Binding DataType}"
                                               Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,8,0,0">
                                      <TextBlock Text="Tags"
                                                 Foreground="{StaticResource SecondaryTextBrush}"/>
                                      <TextBox Text="{Binding Tags}"
                                               Margin="0,4,0,0"/>
                                    </StackPanel>
                                  </StackPanel>
                                </Border>
                              </DataTemplate>
                            </ItemsControl.ItemTemplate>
                          </ItemsControl>
                        </StackPanel>
                      </Border>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </ScrollViewer>
            </Expander.Content>
          </Expander>
        </Border>
        <!-- Column Headers -->
        <Border Grid.Row="1"
                Background="{StaticResource SelectedBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="14">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*"/>
              <ColumnDefinition Width="1.2*"/>
              <ColumnDefinition Width="2*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Command="{Binding SortBySourceFieldCommand}"
                    Style="{x:Null}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="SOURCE DATA HEADER"
                           Foreground="{StaticResource AccentBrush}"
                           FontWeight="SemiBold"/>
                <TextBlock Margin="4,0,0,0"
                           Foreground="{StaticResource AccentBrush}"
                           FontWeight="SemiBold">
                  <TextBlock.Style>
                    <Style TargetType="TextBlock">
                      <Setter Property="Text" Value="&#9650;"/>
                      <Setter Property="Opacity" Value="0.4"/>
                      <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                      <Style.Triggers>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CurrentSortColumn}" Value="SourceField"/>
                            <Condition Binding="{Binding CurrentSortDirection}" Value="Ascending"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Text" Value="&#9650;"/>
                          <Setter Property="Opacity" Value="1"/>
                          <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CurrentSortColumn}" Value="SourceField"/>
                            <Condition Binding="{Binding CurrentSortDirection}" Value="Descending"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Text" Value="&#9660;"/>
                          <Setter Property="Opacity" Value="1"/>
                          <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </MultiDataTrigger>
                      </Style.Triggers>
                    </Style>
                  </TextBlock.Style>
                </TextBlock>
              </StackPanel>
            </Button>
            
            <Button Grid.Column="1"
                    Command="{Binding SortByGroupCommand}"
                    Style="{x:Null}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="GROUP"
                           Foreground="{StaticResource AccentBrush}"
                           FontWeight="SemiBold"/>
                <TextBlock Margin="4,0,0,0"
                           Foreground="{StaticResource AccentBrush}"
                           FontWeight="SemiBold">
                  <TextBlock.Style>
                    <Style TargetType="TextBlock">
                      <Setter Property="Text" Value="&#9650;"/>
                      <Setter Property="Opacity" Value="0.4"/>
                      <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                      <Style.Triggers>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CurrentSortColumn}" Value="Group"/>
                            <Condition Binding="{Binding CurrentSortDirection}" Value="Ascending"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Text" Value="&#9650;"/>
                          <Setter Property="Opacity" Value="1"/>
                          <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CurrentSortColumn}" Value="Group"/>
                            <Condition Binding="{Binding CurrentSortDirection}" Value="Descending"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Text" Value="&#9660;"/>
                          <Setter Property="Opacity" Value="1"/>
                          <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </MultiDataTrigger>
                      </Style.Triggers>
                    </Style>
                  </TextBlock.Style>
                </TextBlock>
              </StackPanel>
            </Button>
            
            <Button Grid.Column="2"
                    Command="{Binding SortByHubSpotHeaderCommand}"
                    Style="{x:Null}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="HUBSPOT HEADER"
                           Foreground="{StaticResource AccentBrush}"
                           FontWeight="SemiBold"/>
                <TextBlock Margin="4,0,0,0"
                           Foreground="{StaticResource AccentBrush}"
                           FontWeight="SemiBold">
                  <TextBlock.Style>
                    <Style TargetType="TextBlock">
                      <Setter Property="Text" Value="&#9650;"/>
                      <Setter Property="Opacity" Value="0.4"/>
                      <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                      <Style.Triggers>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CurrentSortColumn}" Value="HubSpotHeader"/>
                            <Condition Binding="{Binding CurrentSortDirection}" Value="Ascending"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Text" Value="&#9650;"/>
                          <Setter Property="Opacity" Value="1"/>
                          <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CurrentSortColumn}" Value="HubSpotHeader"/>
                            <Condition Binding="{Binding CurrentSortDirection}" Value="Descending"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Text" Value="&#9660;"/>
                          <Setter Property="Opacity" Value="1"/>
                          <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </MultiDataTrigger>
                      </Style.Triggers>
                    </Style>
                  </TextBlock.Style>
                </TextBlock>
              </StackPanel>
            </Button>
            
            <TextBlock Grid.Column="3"
                       Text="ACTION"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource AccentBrush}"
                       FontWeight="SemiBold"/>
          </Grid>
        </Border>

        <!-- Mapping Rows -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Padding="16">
          <ItemsControl ItemsSource="{Binding FieldMappingsView}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="12"
                        Margin="0,0,0,8">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="2*"/>
                      <ColumnDefinition Width="1.2*"/>
                      <ColumnDefinition Width="2*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding SourceField}"
                             Margin="0,0,12,0"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,12,0">
                      <ComboBox ItemsSource="{Binding DataContext.ObjectTypes, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                SelectedItem="{Binding ObjectType}"
                                IsEditable="False"
                                Width="120"/>
                      <ComboBox ItemsSource="{Binding AvailableGroupIndices}"
                                SelectedItem="{Binding GroupIndex}"
                                IsEditable="False"
                                Width="80"
                                Margin="8,0,0,0"/>
                    </StackPanel>

                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding DataContext.HubSpotHeaders, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                              SelectedItem="{Binding HubSpotHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, diag:PresentationTraceSources.TraceLevel=High}"
                              IsEditable="False"
                              IsTextSearchEnabled="True"
                              Margin="0,0,12,0"/>

                    <Button Grid.Column="3"
                            Content="Remove"
                            Command="{Binding DataContext.RemoveMappingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource SecondaryButton}"
                            Padding="10,4"/>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>

        <!-- Mapping Summary -->
        <Border Grid.Row="3"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,0,0"
                Padding="14">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
              <TextBlock Text="{Binding MappingSummary}"
                         Foreground="{StaticResource SecondaryTextBrush}"/>
              <Border Background="#FF4C61"
                      CornerRadius="12"
                      Padding="8,2"
                      Margin="12,0,0,0"
                      Visibility="{Binding HasDuplicateMappings, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="{Binding DuplicateWarning}"
                           Foreground="White"/>
              </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
              <Button Content="+ Add Mapping"
                      Command="{Binding AddMappingCommand}"
                      Style="{StaticResource PrimaryButton}"
                      Margin="0,0,8,0"/>
              <Button Content="Clear All"
                      Command="{Binding ClearMappingsCommand}"
                      Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
          </Grid>
        </Border>
      </Grid>
    </Border>
  </Grid>
</UserControl>





