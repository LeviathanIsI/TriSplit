<UserControl x:Class="TriSplit.Desktop.Views.ProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Toolbar -->
    <Border Grid.Row="0" Style="{StaticResource GlassPanel}"
            Margin="4" Padding="8">
      <WrapPanel Orientation="Horizontal">
        <Button Command="{Binding LoadSampleDataCommand}"
                Content="Load Data File"
                Margin="0,0,8,0"/>

        <Button Command="{Binding LoadProfilesCommand}"
                Content="Load Profiles"
                Margin="0,0,8,0"/>

        <Button Command="{Binding CreateProfileCommand}"
                Content="Create Profile"
                IsEnabled="{Binding CurrentSampleData, Converter={StaticResource BooleanToVisibilityConverter}}"
                Margin="0,0,8,0"/>

        <Button Command="{Binding SaveProfileCommand}"
                Content="Save Profile"
                IsEnabled="{Binding SelectedProfile, Converter={StaticResource BooleanToVisibilityConverter}}"
                Margin="0,0,16,0"/>

        <Separator Width="1" Height="20" Background="{StaticResource BorderBrush}" Margin="0,0,16,0"/>

        <Button Command="{Binding MergeRecordsCommand}"
                Content="Merge"
                IsEnabled="{Binding CurrentSampleData, Converter={StaticResource BooleanToVisibilityConverter}}"
                Margin="0,0,8,0"/>

        <Button Command="{Binding AssociateRecordsCommand}"
                Content="Associate"
                IsEnabled="{Binding CurrentSampleData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
      </WrapPanel>
    </Border>

    <!-- Profile Selection -->
    <Border Grid.Row="1" Style="{StaticResource GlassPanel}"
            Margin="4,0,4,4" Padding="8">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="250"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               Content="Active Profile:"
               VerticalAlignment="Center"/>

        <ComboBox Grid.Column="1"
                  ItemsSource="{Binding Profiles}"
                  SelectedItem="{Binding SelectedProfile}"
                  DisplayMemberPath="Name"
                  Margin="4,0,16,0"/>

        <TextBlock Grid.Column="2"
                   Text="{Binding StatusMessage}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"/>
      </Grid>
    </Border>

    <!-- Main Mapping Grid -->
    <Border Grid.Row="2" Style="{StaticResource GlassPanel}"
            Margin="4,0,4,4">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Headers -->
        <Grid Grid.Row="0" Background="{StaticResource SurfaceBrush}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1.5*" MinWidth="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2.5*" MinWidth="300"/>
          </Grid.ColumnDefinitions>

          <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="0,0,0,1" Padding="12,8">
            <TextBlock Text="Source Data Header"
                       FontWeight="SemiBold"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextBrush}"/>
          </Border>

          <GridSplitter Grid.Column="1" Width="5"
                        HorizontalAlignment="Stretch"
                        Background="{StaticResource BorderBrush}"/>

          <Border Grid.Column="2" BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="0,0,0,1" Padding="12,8">
            <TextBlock Text="Association"
                       FontWeight="SemiBold"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextBrush}"/>
          </Border>

          <GridSplitter Grid.Column="3" Width="5"
                        HorizontalAlignment="Stretch"
                        Background="{StaticResource BorderBrush}"/>

          <Border Grid.Column="4" BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="0,0,0,1" Padding="12,8">
            <TextBlock Text="HubSpot Header"
                       FontWeight="SemiBold"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextBrush}"/>
          </Border>
        </Grid>

        <!-- Data Rows -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
          <ItemsControl ItemsSource="{Binding MappingRows}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Background="{StaticResource SurfaceBrush}"
                        Padding="0,4">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="2.5*" MinWidth="300"/>
                      <ColumnDefinition Width="5"/>
                      <ColumnDefinition Width="1.5*" MinWidth="200"/>
                      <ColumnDefinition Width="5"/>
                      <ColumnDefinition Width="2.5*" MinWidth="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Source Column -->
                    <Grid Grid.Column="0" Margin="12,4">
                      <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>

                      <TextBlock Grid.Row="0"
                                 Text="{Binding SourceColumn}"
                                 FontWeight="Medium"
                                 FontSize="14"
                                 Foreground="{StaticResource TextBrush}"/>

                      <TextBlock Grid.Row="1"
                                 Text="{Binding SampleValues}"
                                 FontSize="12"
                                 Foreground="{StaticResource SecondaryTextBrush}"
                                 TextTrimming="CharacterEllipsis"
                                 ToolTip="{Binding SampleValues}"
                                 Margin="0,2,0,0"/>
                    </Grid>

                    <Rectangle Grid.Column="1" Width="5"
                               Fill="{StaticResource BorderBrush}"/>

                    <!-- Association Selector -->
                    <ComboBox Grid.Column="2"
                              SelectedItem="{Binding AssociationType}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Width="140"
                              Margin="8,4">
                      <ComboBoxItem Content="Contact"/>
                      <ComboBoxItem Content="Property"/>
                      <ComboBoxItem Content="Phone"/>
                      <ComboBoxItem Content="Skip"/>
                    </ComboBox>

                    <Rectangle Grid.Column="3" Width="5"
                               Fill="{StaticResource BorderBrush}"/>

                    <!-- HubSpot Property -->
                    <Grid Grid.Column="4" Margin="12,4">
                      <ComboBox Text="{Binding HubSpotProperty}"
                                IsEditable="True"
                                VerticalAlignment="Center">
                        <ComboBoxItem Content="firstname"/>
                        <ComboBoxItem Content="lastname"/>
                        <ComboBoxItem Content="email"/>
                        <ComboBoxItem Content="phone"/>
                        <ComboBoxItem Content="company"/>
                        <ComboBoxItem Content="lifecyclestage"/>
                        <ComboBoxItem Content="leadstatus"/>
                        <ComboBoxItem Content="address"/>
                        <ComboBoxItem Content="city"/>
                        <ComboBoxItem Content="state"/>
                        <ComboBoxItem Content="zip"/>
                        <ComboBoxItem Content="country"/>
                        <ComboBoxItem Content="website"/>
                        <ComboBoxItem Content="jobtitle"/>
                        <ComboBoxItem Content="notes"/>
                      </ComboBox>
                    </Grid>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </Grid>
    </Border>

    <!-- Progress/Loading Indicator -->
    <Border Grid.Row="3"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
            Background="{StaticResource AccentBrush}"
            Height="4">
      <ProgressBar IsIndeterminate="True"
                   Background="Transparent"
                   BorderThickness="0"/>
    </Border>
  </Grid>
</UserControl>