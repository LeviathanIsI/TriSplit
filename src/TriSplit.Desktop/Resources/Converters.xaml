<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:TriSplit.Desktop.Resources">

  <!-- Built-in WPF Converters -->
  <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

  <!-- Custom Inverse Boolean to Visibility Converter -->
  <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
  <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

  <!-- Null to Placeholder Text Converters -->
  <local:NullToPlaceholderTextConverter x:Key="AssociationPlaceholderConverter" PlaceholderText="Select Association Type"/>
  <local:NullToPlaceholderTextConverter x:Key="HubSpotPlaceholderConverter" PlaceholderText="Select HubSpot Field"/>

</ResourceDictionary>